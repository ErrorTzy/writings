{
  "editorSuggest": {
    "enableAutoSuggest": true,
    "triggerPhrase": "//",
    "commentFormat": "html"
  },
  "decoration": {
    "autoRegisterLabels": true,
    "styles": {
      "labels": {},
      "tag": {
        "style": {
          "fontSize": 10,
          "opacity": 40
        },
        "enableStyle": true
      }
    },
    "defaultPalette": "bright"
  },
  "outline": {
    "fontSize": 12,
    "showLabelsFilter": false,
    "showSearchInput": false,
    "hiddenLabels": [],
    "hiddenTypes": []
  },
  "tts": {
    "rate": 1.1,
    "pitch": 1,
    "volume": 1,
    "focusAnnotationInEditor": true
  },
  "notes": {
    "defaultFolder": "notes",
    "notesNamingMode": "annotation-label/annotation-text",
    "openNoteAfterCreation": false,
    "insertLinkToNote": true,
    "defaultFolderMode": "current folder/notes/<file-name>",
    "template": "{{block_link}}",
    "truncateFileName": false
  },
  "idling": {
    "daysUnused": [
      "2025-01-29",
      "2025-01-30",
      "2025-01-31",
      "2025-02-02"
    ]
  },
  "clipboard": {
    "templates": {
      "front": "",
      "header": "# {{note_name}}",
      "highlight": "- {{highlight_text}}",
      "comment": "- _{{comment_text}}_"
    }
  }
}